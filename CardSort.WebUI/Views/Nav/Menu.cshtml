@model IEnumerable<string>

@Html.ActionLink("Home", "List", "Card", null, new { @class = "btn btn-outline-secondary w-100 btn-lg mb-2" })

@foreach(var link in Model)
{
    @Html.RouteLink(link, new {
        controller = "Card",
        action = "List",
        category = link,
        page = 1 },
    new {@class = "btn btn-outline-secondary w-100 btn-lg mb-2" + (link == ViewBag.SelectedCategory ? " active" : "")})
}