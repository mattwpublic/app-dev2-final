@model CardSort.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Log in</h3>
        </div>

        <div class="card-body">
            <p class="lead">
                Please log in to edit your collection.
            </p>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="mb-3">
                    <label for="UserName" class="form-label">User Name:</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "UserName" })
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password:</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", id = "Password" })
                </div>

                <button type="submit" class="btn btn-primary">Log in</button>
            }
        </div>
    </div>
</div>